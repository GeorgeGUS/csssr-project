.skills
	margin-top 65px
	clearfix()
	&__title
		font-family 'PT Sans', 'Arial', sans-serif
		font-size 24px
		font-weight bold
		line-height 50px
		color colorTitle

	&__text
		margin-bottom 1.5em
		font-family 'PT Sans', 'Arial', sans-serif
		font-size 15px
		line-height 1.5em
		color colorText

	&__column
		float left

		.label
			position relative
			margin-bottom 17px
			margin-left 25px
			display block
			clearfix()
			font-family 'PT Sans', 'Arial', sans-serif
			font-size 21px
			font-weight bold
			cursor pointer

			&::before
				position absolute
				left -25px
				content ''
				size 18px
				// sprite $checkbox_clear

			&::after
				position absolute
				top 5px
				left -23px
				display none
				content ''
				size 10px 3px
				border 3px solid #000
				border-top-style none
				border-right-style none
				transform rotate(-45deg)


			&__stairs-text
				margin 0 4px 0 -4px
				display inline-block
				&:first-of-type
					margin-left 0

			&__link
				color #1f5f97

		.input-checkbox
			display none

			&:checked + .label::after
				display block
