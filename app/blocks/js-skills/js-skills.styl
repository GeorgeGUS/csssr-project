.js-skills
	margin-top 30px
	display block

.slider
	position relative
	margin-top 15px
	transition all .3s ease-in-out

	&__arrow
		position absolute
		top -15px
		size 14px
		cursor pointer
		sprite($arrow_down)
		transition all .2s ease-in-out
		// transition all .3s cubic-bezier(.87, -.41, .19, 1.44)

	&__scale
		width 100%
		height 5px
		background-image url('/underline.png')

	&__items
		margin-top 35px
		display flex
		justify-content space-between

	&__item
		position relative
		width 170px
		height 50px
		cursor pointer

		input
			display none

		label
			font-family 'PT Sans', 'Arial', sans-serif
			font-size 13px
			font-weight bold
			cursor pointer
			color colorTitle

		&::after
			position absolute
			bottom 0
			display block
			content ''
			size 100% 110px

	&__item:first-of-type,
	&__item:last-of-type
		flex-basis 145px
		flex-grow 0

		&::before
			position absolute
			top -37px
			display block
			content ''
			size 3px 25px
			background colorTitle

	&__item:last-of-type::before
		right 0

	&__item:nth-of-type(2),
	&__item:nth-of-type(3)
		margin-right 55px

		&::before
			position absolute
			top -37px
			left 0
			display block
			content ''
			size 3px 12px
			background colorTitle
